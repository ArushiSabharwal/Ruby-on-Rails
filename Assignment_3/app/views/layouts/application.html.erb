<!DOCTYPE html>
<html>
  <head>
  <title> My Store</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload'%>
  <%= csrf_meta_tags %>
  </head>
  <body class='<%= controller.controller_name %>'>
    <div id="banner">
      <%= image_tag("logo.png") %>
      <%= @page_title || "Our Products" %>
      <% if session[:user_id] %>
    <div id="login_button"><%= link_to 'LOGOUT', logout_path, method: :delete %></div>
    <% else %>
    <div id="login_button"><%= link_to 'LOGIN', login_path %></div>
    <% end %>
  </div>
    <div id="columns">
      <div id="side">
        <div id="cart">
          <%=render(@cart)%>
        </div>
        <!-- <div style=“color:yellow”>
          <h1>testing</h1>
        </div> -->
        <ul>
          <% if session[:user_id] %>
          <li><a href="/admin/index">Home</a></li>
          <% else %>
          <li><a href="/shopper/index">Home</a></li>
          <% end %>
          <li><a href="/public/questions.html">Questions</a></li>
          <li><a href="/public/news.html">News</a></li>
          <li><a href="/public/contact.html">Contact</a></li>
        </ul>
        <% if session[:user_id] %>
        <h1> Admin Controls: </h1>
        <ul>
          <li><%= link_to 'Orders', orders_path %></li>
          <li><%= link_to 'Products', products_path %></li>
          <li><%= link_to 'Users', users_path %></li>
        </ul>

        <% end %>
      </div>
      <div id="main">
        <%= yield %>
  </div>
  </div>

  </body>
</html>
